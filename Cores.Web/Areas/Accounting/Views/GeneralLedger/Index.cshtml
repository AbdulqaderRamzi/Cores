@model IEnumerable<GeneralLedger>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">General Ledger</h6>
            @*<a class="btn btn-secondary" asp-controller="GeneralLedger" asp-action="Create">
                <i class="fas fa-plus-circle"></i> Create Entry
            </a>*@
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>GL ID</th>
                        <th>Account ID</th>
                        <th>Transaction Date</th>
                        <th>Journal Entry ID</th>
                        <th>Description</th>
                        <th>Debit</th>
                        <th>Credit</th>
                        <th>Running Balance</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>GL ID</th>
                        <th>Account ID</th>
                        <th>Transaction Date</th>
                        <th>Journal Entry ID</th>
                        <th>Description</th>
                        <th>Debit</th>
                        <th>Credit</th>
                        <th>Running Balance</th>
                    </tr>
                </tfoot>
                <tbody class="text-dark">
                    @foreach (var ledger in Model)
                    {
                        <tr>
                            <td>@ledger.Id</td>
                            <td>@ledger.Account.Id</td>
                            <td>@ledger.TransactionDate.ToString("yyyy-MM-dd")</td>
                            <td>@ledger.JournalEntry.Id</td>
                            <td>@ledger.Description</td>
                            <td class="text-end">@ledger.DebitAmount.ToString("N2")</td>
                            <td class="text-end">@ledger.CreditAmount.ToString("N2")</td>
                            <td class="text-end">@ledger.RunningBalance.ToString("N2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
