@model Currency
<form method="POST">
    <h2 class="mb-2 text-gray-800">Currency</h2>
    <input hidden asp-for="Id">
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <label asp-for="Name" class="text-gray-800"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Code" class="text-gray-800"></label>
                <input asp-for="Code" class="form-control">
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            
        </div>
    </div>
    <div class="row ml-1 mt-1">
        <a asp-controller="Currency" asp-action="Index"
           class="btn btn-dark">
            <i class="fas fa-arrow-left"></i> Back
        </a>
        <button type="submit" class="btn btn-success ml-2">
            <i class="fas fa-solid fa-check"></i> Create
        </button>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}