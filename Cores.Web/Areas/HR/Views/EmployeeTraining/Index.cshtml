@model IEnumerable<EmployeeTraining>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <div class="d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">Employee Trainings</h6>
            <a class="btn btn-secondary" asp-action="Upsert">
                <i class="fas fa-plus-circle"></i> Create Employee Training
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Employee</th>
                    <th>Training</th>
                    <th>Completion Status</th>
                    <th>Completion Date</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>Employee</th>
                    <th>Training</th>
                    <th>Completion Status</th>
                    <th>Completion Date</th>
                    <th>Actions</th>
                </tr>
                </tfoot>
                <tbody>
                    @foreach (var employeeTraining in Model)
                    {
                        <tr>
                            <td>@($"{employeeTraining.Employee.FirstName} {employeeTraining.Employee.LastName}")</td>
                            <td>@employeeTraining.Training.Name</td>
                            <td>@employeeTraining.CompletionStatus</td>
                            <td>@employeeTraining.CompletionDate?.ToString("yyyy-MM-dd")</td>
                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-primary dropdown-toggle" type="button"
                                            id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                                            aria-expanded="false">
                                        Actions
                                    </button>
                                    <div class="dropdown-menu animated--fade-in"
                                         aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" asp-controller="EmployeeTraining" asp-action="Upsert" asp-route-id="@employeeTraining.Id"
                                           onmouseover="this.style.backgroundColor='#f6a23e'; this.style.color='white';"
                                           onmouseout="this.style.backgroundColor=''; this.style.color='';">
                                            <i class="fas fa-info-circle"></i> Details
                                        </a>
                                        <a class="dropdown-item" asp-controller="EmployeeTraining" asp-action="Upsert" asp-route-id="@employeeTraining.Id"
                                           onmouseover="this.style.backgroundColor='#5cb85e'; this.style.color='white';"
                                           onmouseout="this.style.backgroundColor=''; this.style.color='';">
                                            <i class="fas fa-edit"></i> Update
                                        </a>
                                        <a class="dropdown-item" href="javascript:void(0);" onclick="deleteObj('/HR/EmployeeTraining/Delete?id=@employeeTraining.Id')"
                                           onmouseover="this.style.backgroundColor='#e74a3e'; this.style.color='white';"
                                           onmouseout="this.style.backgroundColor=''; this.style.color='';">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/delete.js"></script>
}