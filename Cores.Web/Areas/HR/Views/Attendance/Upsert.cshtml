@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
      <script>
        $(document).ready(function () {
            $('.select2').select2();
            $(".flatpickr").flatpickr({dateFormat: "Y-m-d"});
              $(".flatpickr-time").flatpickr({
                enableTime: true,
                noCalendar: true,
                dateFormat: "H:i",
                time_24hr: true,
                minuteIncrement: 1,
            });
        });
