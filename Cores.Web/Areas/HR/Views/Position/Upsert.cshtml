@model PositionVm

<div class="container mt-5">
    <h2 class="mb-4 text-center">Position Information</h2>
    <form method="POST" class="bg-white shadow-sm rounded p-4">
        <input asp-for="Position.Id" hidden>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Position.Title" class="form-label">Position Title</label>
                    <input asp-for="Position.Title" class="form-control" type="text">
                    <span class="text-danger" asp-validation-for="Position.Title"></span>
                </div>
            </div>  
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Position.AverageSalary" class="form-label">Salary Range</label>
                    @if (Model.Position.AverageSalary is not 0)
                    {
                        <input asp-for="Position.AverageSalary" class="form-control" type="text" value="@(Model.Position.AverageSalary?.ToString("F2"))">
                    }
                    else
                    {
                        <input asp-for="Position.AverageSalary" class="form-control" type="text">
                    }
                    <span class="text-danger" asp-validation-for="Position.AverageSalary"></span>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Position.DepartmentId" class="form-label">Department</label>
                    <select class="form-control select2" asp-for="Position.DepartmentId" asp-items="@Model.Departments">
                        <option value="" disabled selected>-- Select Department --</option>
                    </select>
                    <span asp-validation-for="Position.DepartmentId" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Position.CurrencyId" class="form-label">Salary Currency</label>
                    <select class="form-control select2" asp-for="Position.CurrencyId" asp-items="@Model.Currencies">
                        <option value="" disabled selected>-- Select Currency --</option>
                    </select>
                    <span asp-validation-for="Position.CurrencyId" class="text-danger"></span>
                </div>
            </div>
            
        </div>

        <div class="row mb-3">
            <label asp-for="Position.JobDescription" class="form-label">Job Description</label>
            <textarea asp-for="Position.JobDescription" class="form-control" rows="3"></textarea>
        </div>
        
        @if (Model.Position.Id is not 0)
        {
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Position</th>
                            @*<th>Manager</th>*@
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Position</th>
                            @*<th>Manager</th>*@

                        </tr>
                        </tfoot>
                        <tbody class="text-dark">
                        @foreach (var employee in Model.Position.Employees)
                        {
                            <tr>
                                <td>@($"{employee.FirstName} {employee.LastName}")</td>
                                <td>@employee.Email</td>
                                <td>@Model.Position.Title</td>
                                @*<td>@($"{employee.Manager.FirstName} {employee.Manager.LastName}")</td>*@
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-12">
                <a asp-controller="Position" asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-check"></i> Submit
                </button>
            </div>
        </div>
    </form>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }
    .form-label {
        font-weight: 600;
    }
    .select2-container .select2-selection--single,
    .select2-container--default .select2-selection--single .select2-selection__rendered,
    .select2-container--default .select2-selection--single .select2-selection__arrow {
        height: 38px;
        line-height: 38px;
    }
    .select2-container--default .select2-selection--single,
    .form-control {
        border: 1px solid #ced4da;
        border-radius: 0.25rem;
    }
    .btn {
        border-radius: 0.25rem;
        padding: 0.375rem 0.75rem;
    }
    .card {
        border-radius: 0.5rem;
    }
    .input-group-text {
        background-color: #f8f9fa;
        border: 1px solid #ced4da;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
    <script>
        $(document).ready(function () {
            $('.select2').select2();
        });
    </script>
}